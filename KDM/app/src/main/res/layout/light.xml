<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bgr_me"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/wb">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Ltext5"
                android:text="전체조명\nON/OFF"
                android:fontFamily="@font/gd"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="40sp"
                android:textColor="#FFFFFF"
                android:onClick="onClick"
                android:clickable="true"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/wb"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Ltext1"
                    android:text="안방조명\nON/OFF"
                    android:fontFamily="@font/gd"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:textColor="#FFFFFF"
                    android:onClick="onClick"
                    android:clickable="true"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/wb">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Ltext2"
                    android:text="거실조명\nON/OFF"
                    android:fontFamily="@font/gd"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:textColor="#FFFFFF"
                    android:onClick="onClick"
                    android:clickable="true"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/wb">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Ltext3"
                    android:text="부엌조명\nON/OFF"
                    android:fontFamily="@font/gd"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:textColor="#FFFFFF"
                    android:onClick="onClick"
                    android:clickable="true"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/wb">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Ltext4"
                    android:text="화장실조명\nON/OFF"
                    android:fontFamily="@font/gd"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:textColor="#FFFFFF"
                    android:onClick="onClick"
                    android:clickable="true"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>